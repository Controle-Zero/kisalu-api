// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id                  String               @id @default(uuid())
  bi                  String               @unique
  nome                String
  dataNasc            DateTime
  morada              String
  email               String               @unique
  telefone            Int
  password            String
  refreshTokenCliente RefreshTokenCliente?
  atividades          Atividade[]

  @@map("clientes")
}

model Anuncio {
  id          String      @id @default(uuid())
  titulo      String
  dataCriado  DateTime    @default(now())
  images      String?
  atividades  Atividade[]
  Prestador   Prestador?  @relation(fields: [prestadorId], references: [id])
  prestadorId String?

  @@map("anuncios")
}

model Prestador {
  id                    String                 @id @default(uuid())
  bi                    String                 @unique
  nome                  String
  dataNasc              DateTime
  morada                String
  email                 String                 @unique
  telefone              Int
  password              String
  estado                String                  @default("INATIVO")
  iban                  String
  classificacao         Float                   @default(0)
  numAvaliacoes         Int                     @default(0)
  rate                  Float                   @default(0)
  refreshTokenPrestador RefreshTokenPrestador?
  anuncios              Anuncio[]
  atividades            Atividade[]

  @@map("prestadores")
}

model Atividade {
  id             String    @id @default(uuid())
  dataCriado     DateTime  @default(now())
  dataFinalizado DateTime
  valorAssociado Float
  numRef         Int
  estado         String
  prestadorId    String
  clienteId      String
  anuncioId      String
  Cliente        Cliente   @relation(fields: [clienteId], references: [id])
  Anuncio        Anuncio   @relation(fields: [anuncioId], references: [id])
  Prestador      Prestador @relation(fields: [prestadorId], references: [id])

  @@map("atividades")
}

model RefreshTokenCliente {
  id        String  @id @default(uuid())
  expiraEm  Int
  cliente   Cliente @relation(fields: [clienteId], references: [id])
  clienteId String  @unique

  @@map("refresh_token_cliente")
}

model RefreshTokenPrestador {
  id          String    @id @default(uuid())
  expiraEm    Int
  prestador   Prestador @relation(fields: [prestadorId], references: [id])
  prestadorId String    @unique

  @@map("refresh_token_prestador")
}
